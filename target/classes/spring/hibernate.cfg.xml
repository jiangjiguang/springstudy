<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
       <session-factory>
           <!--配置hibernate的基本属性-->
           <!--1. 数据源配置到IOC容器中，所以不需要在配置数据源-->
           <!--2. 关联的.hbm.xml 也在IOC容器配置SessionFactory实例时进行配置-->
           <!--3. 配置hibernate的基本属性 方言 SQL 显示以及格式化  生成数据表的策略  以及二级缓存等-->
           <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
           <property name="hibernate.show_sql">true</property>
           <property name="hibernate.format_sql">true</property>
           <property name="hibernate.hbm2ddl.auto">update</property>

            <mapping package="com.jiangjg.springstudy.hibernate.entities"></mapping>
           <!--配置hibernate二级缓存相关的属性-->
       </session-factory>
</hibernate-configuration>